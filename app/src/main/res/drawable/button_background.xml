<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#000000" /> <!-- Shadow color -->
            <corners android:radius="5dp" />
        </shape>
    </item>

    <!-- Border and background layer -->
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FDE449" /> <!-- Button background color -->
            <stroke android:width="2dp" android:color="#000000" /> <!-- Border color -->
            <corners android:radius="8dp" /> <!-- Rounded corners -->
        </shape>
    </item>

</layer-list>